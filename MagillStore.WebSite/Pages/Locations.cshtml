@page
@model MagillStore.WebSite.Pages.LocationsModel
@{
}


<!-- header info-->
<div class="text-center">
    <h1 class="display-4"><b>Locations</b></h1>
    <div><img border="0" src="~/images/store.PNG" style="width:900px;height:200px;"></div>
    <br />
</div>

<h4><b>Filter by City</b></h4>

<form method="POST">
    <select name="City" asp-items="Model.LocationCities"> </select>
    <div> 
        <input type ="submit" value = "Filter" asp-pageHandler ="First" />
    </div>
</form>

<body>
    <h4>Locations</h4>

    <table cellpadding="10" cellspacing="10" border="1" >
        <tr bgcolor="gray">
            <th>ID</th>
            <th>Name</th>
            <th>Address</th>
            <th>City</th>
            <th>State</th>
            <th>Zip</th>
            <th>Latitude</th>
            <th>Longitude</th>

        </tr>
        @foreach (var location in Model.Locations)
        {
    <tr bgcolor="#fff">
        <td>@location.LocationId</td>
        <td>@location.LocationName</td>
        <td>@location.Address</td>
        <td>@location.City</td>
        <td>@location.State</td>
        <td>@location.Zip</td>
        <td>@location.Lat</td>
        <td>@location.Lon</td>
    </tr>
        }
    </table>
</body>

